<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Port</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link id="theme-stylesheet" rel="stylesheet" href="~/css/light.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Port.styles.css" asp-append-version="true" />
    <style>
        /* Reset margins and paddings to remove any default spacing */
        html, body {
            margin: 0;
            padding: 0;
        }

        /* Ensure no extra space in the header */
        header {
            margin: 0;
            padding: 0;
        }

        /* Make sure the navbar has no background or a background matching the page */
        .navbar {
            background-color: transparent; /* or use bg-dark if you want a black background */
            border: none; /* Remove any border that might cause lines */
        }

        /* Remove the shadow */
        .box-shadow {
            box-shadow: none; /* This removes the default box shadow */
        }

        /* Center the footer text and remove the border */
        footer {
            text-align: center;
            border-top: none; /* Removes the line above the footer */
            padding: 10px 0; /* Adds some space to the top and bottom */
        }

        .contact-info {
            text-align: center;
            padding: 20px 0;
        }

        .contact-info a {
            margin: 0 15px;
            text-decoration: none;
            color: #007bff; /* Bootstrap link color */
            font-size: 1.5em; /* Size of icons */
        }

        .contact-info img {
            width: 40px; /* Size of the icon images */
            height: auto;
            vertical-align: middle; /* Align icons with text */
        }

    </style>
</head>
<body>
    

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer section with contact info -->
    <footer id="contact" class="footer text-muted"> <!-- Added id "contact" -->
        <div class="container">
            <div class="contact-info">
                <a href="mailto:gowrimohankrishnan@gmail.com">
                    <img src="https://raw.githubusercontent.com/Gowri-Mohan/Portfolio/fd80a22399f9957f6df2dacefa88d9a8aa46b7fa/mail%20icon.jpeg" alt="Email" />
                </a>
                <a href="tel:+91 6282085183">
                    <img src="https://raw.githubusercontent.com/Gowri-Mohan/Portfolio/44f9a47d3bc2e6b888ac673c738e4b84a057f347/phone.jpeg" alt="Phone" />
                </a>
                <a href="https://github.com/Gowri-Mohan" target="_blank">
                    <img src="https://raw.githubusercontent.com/Gowri-Mohan/Portfolio/ed1d9b57b01954eb6190928db1c7b19bb0a9546d/GitHub-Mark-ea2971cee799.png" alt="GitHub" />
                </a>
                <a href="https://www.linkedin.com/in/gowri-mohan-079010234/" target="_blank">
                    <img src="https://raw.githubusercontent.com/Gowri-Mohan/Portfolio/195e31324b8108a087f1c291ac5a521acce7bf89/05da3431471058c803afacb2f5483f7b.jpg" alt="LinkedIn" />
                </a>
            </div>
            &copy; Copyright 2024 ©️ GowriMohan
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

