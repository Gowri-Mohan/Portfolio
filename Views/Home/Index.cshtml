    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #0d1117;
            color: #f0f6fc;
            margin: 0;
            padding: 0 20px;
        }

        .container {
            max-width: 1100px;
            margin: 0 auto;
            padding: 0;
        }

        /* Intro Section */
        .intro {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 0;
            padding: 40px 0;
        }

        .intro .text {
            flex-grow: 1;
            padding-right: 30px;
        }

        .intro img {
            width: 400px;
            height: auto;
            border-radius: 20px;
            object-fit: contain;
            filter: drop-shadow(0 0 15px rgba(255, 255, 255, 0.1));
        }

        h1 {
            font-size: 4em;
            color: #00ffcc;
            margin: 0;
            font-weight: 700;
            line-height: 1.2;
        }

        .name-highlight {
            color: #ff6ec7;
            font-size: 1.25em;
            font-weight: 500;
        }

        p {
            font-size: 1.2em;
            color: #b0bec5;
            margin: 10px 0 20px 0;
            max-width: 600px;
            line-height: 1.5;
        }

        .btn {
            display: inline-block;
            padding: 10px 30px;
            margin: 10px 10px 0 0;
            border: 2px solid #00ffcc;
            background-color: transparent;
            color: #00ffcc;
            border-radius: 20px;
            text-decoration: none;
            font-size: 1em;
            box-shadow: 0px 5px 15px rgba(0, 255, 204, 0.5);
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .btn:hover {
            background-color: #00ffcc;
            color: #0d1117;
            transform: translateY(-3px);
        }

        /* Section Styles */
        .section {
            margin: 40px 0;
        }

        .background-text {
            font-size: 2.5em;
            color: #00ffcc;
            margin-bottom: 20px;
            text-align: left;
        }

        .section-content {
            display: flex;
            flex-wrap: wrap;
            gap: 20px; /* Spacing between cards */
        }

        .card {
            background-color: #1e1e1e;
            border-radius: 15px;
            padding: 20px;
            flex: 1 1 calc(30% - 20px); /* Three cards per row with some spacing */
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            transition: transform 0.3s;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .experience-img {
            width: 100px;
            height: auto;
            margin-bottom: 10px;
        }
    </style>
</head>
